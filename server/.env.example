# ================================
# NALBUR DEPOSU - Environment Variables
# ================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun
# cp .env.example .env

# ================================
# DATABASE
# ================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nalburdeposu
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/nalburdeposu

# ================================
# API SERVICE
# ================================
API_PORT=8080
API_URL=https://api.nalburdeposu.com.tr
CLIENT_URL=https://nalburdeposu.com.tr
CDN_URL=https://cdn.nalburdeposu.com.tr
CORS_ORIGIN=https://nalburdeposu.com.tr
NODE_ENV=production
GOOGLE_MERCHANT_TOKEN=your_secure_feed_token_here

# ================================
# ADMIN PANEL
# ================================
ADMIN_PORT=8081
ADMIN_PATH=/admin
ADMIN_LOGIN_PATH=/admin/login
ADMIN_EMAIL=admin@nalburdeposu.com.tr
ADMIN_PASSWORD=your_secure_admin_password_here
COMPANY_NAME=Nalbur Deposu

# ================================
# SESSION & SECURITY
# ================================
# Generate with: openssl rand -base64 32
COOKIE_PASSWORD=your_32_char_cookie_password_here
SESSION_SECRET=your_session_secret_here

# ================================
# PARAM POS PAYMENT GATEWAY
# ================================
PARAM_CLIENT_CODE=10738
PARAM_CLIENT_USERNAME=Test
PARAM_CLIENT_PASSWORD=Test
PARAM_GUID=0c13d406-873b-403b-9c09-a5766840d98c
# Test: https://testposws.param.com.tr/turkpos.ws/service_turkpos_prod.asmx?wsdl
# Prod: https://posws.param.com.tr/turkpos.ws/service_turkpos_prod.asmx?wsdl
PARAM_BASE_URL=testposws.param.com.tr/turkpos.ws/service_turkpos_prod.asmx?wsdl

# ================================
# EMAIL (BREVO/SENDINBLUE)
# ================================
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_brevo_smtp_user
SMTP_PASS=your_brevo_smtp_password
SMTP_SENDER=siparis@nalburdeposu.com.tr

# ================================
# CLOUDFLARE R2 (Image Storage)
# ================================
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET_KEY=your_r2_secret_key
R2_BUCKET=nalburdeposu

# ================================
# CLOUDFLARE TUNNEL
# ================================
TUNNEL_TOKEN=your_cloudflare_tunnel_token

# ================================
# CADDY (REVERSE PROXY)
# ================================
# Gizli port - 61094 gibi tahmin edilmesi zor bir port seçin
CADDY_PORT=61094
